@model Restaurantee.Models.usuario

@{
    Layout = null;
    var valor = TempData["msg"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edmin</title>
    <link type="text/css" href="~/edmin/code/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" href="~/edmin/code/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="~/edmin/code/css/theme.css" rel="stylesheet">
    <link type="text/css" href="~/edmin/code/images/icons/css/font-awesome.css" rel="stylesheet">
</head>
<body>

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a>

                <a class="brand" href="index.html">
                    Edmin
                </a>

                <div class="nav-collapse collapse navbar-inverse-collapse">

                    <ul class="nav pull-right">

                        <li>
                            <a href="#">
                                Sign Up
                            </a>
                        </li>



                        <li>
                            <a href="#">
                                Forgot your password?
                            </a>
                        </li>
                    </ul>
                </div><!-- /.nav-collapse -->
            </div>
        </div><!-- /navbar-inner -->
    </div><!-- /navbar -->



    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="module module-login span4 offset4">
                    <form asp-action="GetUsuarios">
                        <div class="module-head">
                            <h3>Sign In</h3>
                        </div>
                        <div class="module-body">
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    <input class="span12 form-control" asp-for="nombre" id="inputUser" placeholder="Username">
                                    <span asp-validation-for="nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    <input class="span12 form-control" asp-for="clave" id="inputPassword" placeholder="Password">
                                    <span asp-validation-for="clave" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="module-foot">
                            <div class="control-group">
                                <div class="controls clearfix">
                                    <button type="submit" class="btn btn-primary pull-right form-control" id="btnEntrar">Login</button>
                                    <label class="checkbox">
                                        <input type="checkbox"> Remember me
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div><!--/.wrapper-->

    <div class="footer">
        <div class="container">
            <b class="copyright">&copy; 2014 Edmin - EGrappler.com </b> All rights reserved.
        </div>
    </div>
    <script type="text/javascript" src="~/js/core/jquery.min.js"></script>
    <script type="text/javascript" src="~/edmin/code/scripts/jquery-1.9.1.min.js"></script>
    <script type="text/javascript" src="~/edmin/code/scripts/login.js"></script>
    <script src="~/edmin/code/scripts/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
    <script src="~/edmin/code/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
</body>
</html>
