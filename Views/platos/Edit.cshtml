@model Restaurantee.Models.plato

@{
    ViewData["Title"] = "Edit";
}
<div class="span9">
    <div class="content">
        <h2>Edit</h2>

        <h4>plato</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
